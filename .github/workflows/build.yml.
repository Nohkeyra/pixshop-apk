name: Build APK

on:
  push:
    branches:
      - main

jobs:
  build:
    runs-on: ubuntu-latest

    steps:
      - name: Checkout
        uses: actions/checkout@v4

      - name: Setup JDK 17
        uses: actions/setup-java@v4
        with:
          distribution: temurin
          java-version: 17

      - name: Setup Gradle
        uses: gradle/actions/setup-gradle@v3
        with:
          gradle-version: 8.1.1

      - name: Setup Android SDK
        uses: android-actions/setup-android@v3
        with:
          cmdline-tools-version: 12266719

      - name: Install Android Build Tools 33.0.2
        run: |
          yes | sdkmanager "build-tools;33.0.2" "platforms;android-33" "platform-tools"

      - name: Setup Node.js 20
        uses: actions/setup-node@v4
        with:
          node-version: 20

      - name: Install Cordova
        run: npm install -g cordova@12

      - name: Install Dependencies
        run: |
          npm install

      - name: Build React App
        # This converts your App.tsx and CSS into raw HTML/JS for the phone
        run: npm run build

      - name: Prepare Cordova WWW
        # Vite builds to 'dist', but Cordova needs 'www'
        run: |
          rm -rf www
          cp -r dist www

      - name: Inject API Key
        # We inject the key into the compiled JS files in the www folder
        run: |
          find www -type f -name "*.js" -exec sed -i "s/PLACEHOLDER_API_KEY/${{ secrets.PIXSHOP_API_KEY }}/g" {} +

      - name: Clean and Prepare Cordova Android
        run: |
          rm -rf platforms/ plugins/
          cordova platform add android@12.0.1
          cordova plugin add cordova-plugin-androidx-adapter
          cordova plugin add cordova-custom-config
          cordova plugin add cordova-plugin-device
          cordova plugin add cordova-plugin-file

      - name: Build Debug APK
        run: cordova build android --debug --verbose

      - name: Upload APK
        uses: actions/upload-artifact@v4
        with:
          name: pixshop-apk
          path: platforms/android/app/build/outputs/apk/debug/app-debug.apk
